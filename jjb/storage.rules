rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Dossiers par utilisateur pour les avatars
    match /avatars/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Dossiers par utilisateur pour les documents
    match /documents/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Dossiers par utilisateur pour les photos d'événements
    match /events/{userId}/{eventId}/{photo=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Dossiers par utilisateur pour les vidéos techniques
    match /techniques/{userId}/{techniqueId}/{video=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Par défaut, refuser l'accès
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
